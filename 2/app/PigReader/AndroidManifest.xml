       <!-- appid -->
		 <meta-data
			android:name="APP_ID"
			android:value="2C7120EC1FEE43804998F54603FB5243" />
					
		<!-- 广告播放时间(s) -->
		<meta-data
			android:name="APP_INTERVAL"
			android:value="30" />
		
		<!-- 测试模式, true为测试,false为发布  -->
		<meta-data
			android:name="APP_TESTMODE"
			android:value="false" />
			
        <!-- 友盟统计  -->
        <meta-data android:value="5098812652701519940000d9" android:name="UMENG_APPKEY"></meta-data>
		<meta-data android:value="appchina" android:name="UMENG_CHANNEL"/>
        
        
 		<activity  android:name=".activity.DemoActivityEbookMain"
                    >
