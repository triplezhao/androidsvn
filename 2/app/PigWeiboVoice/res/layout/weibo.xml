<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="horizontal" android:tag="itemview"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	xmlns:android="http://schemas.android.com/apk/res/android">
	<FrameLayout android:id="@+id/lyItemPortrait"
		android:padding="0.0dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginLeft="5dip"
		android:layout_marginTop="5.0dip" android:layout_marginRight="3dip">
		<ImageView android:id="@+id/wbprofile" style="@style/small_portrait" />
		<ImageView android:id="@+id/tweet_profile_previewV" style="@style/small_portrait_mask" />
	</FrameLayout>
	<LinearLayout android:orientation="vertical" android:id="@+id/lyRightLayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="10dip" android:background="@drawable/radirs" android:layout_marginBottom="10dip">
		
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:textSize="15.0sp" android:textStyle="bold"
				android:textColor="#ff202020" android:ellipsize="end" android:id="@+id/wbuser"
				android:paddingLeft="5.0dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text=""
				android:singleLine="true" />
			<ImageView android:layout_gravity="center_vertical"
				android:id="@+id/ivItemV" android:visibility="gone"
				android:saveEnabled="false" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/v" />
			<LinearLayout android:gravity="right"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_weight="1.0">
				<ImageView android:id="@+id/wbicon" android:visibility="gone"
					android:saveEnabled="false" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginTop="3.0dip"
					android:src="@drawable/location_icon" android:layout_alignTop="@+id/wbtime" />
				<ImageView android:id="@+id/wbloc" android:visibility="gone"
					android:saveEnabled="false" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginTop="3.0dip"
					android:src="@drawable/pic" android:layout_alignTop="@+id/wbtime" />
				<TextView android:textSize="12.0sp" android:textColor="#ff666666"
					android:layout_gravity="top|right|center" android:id="@+id/wbtime"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="3.0dip" android:text=""
					android:layout_alignParentRight="true" />
			</LinearLayout>
		</LinearLayout>
		
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:background="@drawable/popup">
		<TextView android:textColor="#ff414951" android:id="@+id/wbtext"
			android:paddingLeft="5.0dip" android:paddingRight="5.0dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="8.0dip" android:text=""
			android:lineSpacingExtra="2dip" />
		<ImageView android:id="@+id/wbimage"
			android:background="@drawable/white" android:padding="3dp" android:visibility="gone"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/preview_pic_loading" android:scaleType="centerInside"
			android:maxWidth="@dimen/preview_pic_size" android:maxHeight="@dimen/preview_pic_size"
			android:minWidth="80.0dip" android:minHeight="80.0dip" />
		</LinearLayout>
		<LinearLayout android:orientation="vertical" android:id="@+id/llrepost"
			android:background="@drawable/popup" android:visibility="gone"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="4.0dip" android:layout_marginLeft="30dip">
			<TextView android:textColor="#ff666666" android:id="@+id/wbtext_repost"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginTop="3.0dip" android:layout_marginBottom="3.0dip"
				android:text="" android:lineSpacingExtra="2dip" />
			<LinearLayout 
				android:orientation="horizontal" android:paddingBottom="10.0dip"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:scrollbars="none">
				<ImageView android:id="@+id/wbimage_repost"
					android:background="@drawable/white" android:padding="3dp" android:visibility="gone"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/preview_pic_loading" 
					android:maxWidth="@dimen/preview_pic_size" android:maxHeight="@dimen/preview_pic_size"
					android:minWidth="80.0dip" android:minHeight="80.0dip" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:textSize="12.0sp" android:textColor="#ff7d7d7d"
				android:id="@+id/tweet_form" android:paddingLeft="5.0dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="1.0" />
			<LinearLayout android:gravity="right|center"
				android:orientation="horizontal" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<ImageView android:id="@+id/tweet_redirect_pic"
					android:paddingLeft="10.0dip" android:visibility="gone"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/redirect_icon" />
				<TextView android:textSize="12.0sp" android:textColor="#ffa4b7d6"
					android:id="@+id/tweet_redirect" android:paddingLeft="2.0dip"
					android:visibility="gone" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<ImageView android:id="@+id/tweet_comment_pic"
					android:paddingLeft="10.0dip" android:visibility="gone"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/comment_icon" />
				<TextView android:textSize="12.0sp" android:textColor="#ffa4b7d6"
					android:id="@+id/tweet_comment" android:paddingLeft="2.0dip"
					android:paddingRight="5.0dip" android:visibility="gone"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>