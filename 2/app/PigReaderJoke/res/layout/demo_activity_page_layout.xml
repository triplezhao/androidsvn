<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/rl_page"
  >
	  
	    <com.fgh.reader.joke.pageturner.PageWidget
	  	 android:id="@+id/pw_page" 
	     android:layout_margin="0dip"
	     android:layout_width="fill_parent"
	     android:layout_height="fill_parent"
	     />
	     <RelativeLayout
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:id="@+id/rl_memu"
			  android:visibility="gone"
			  >
		<com.google.ads.AdView 
		    	android:id="@+id/adView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        ads:adUnitId="a14f7662044e620"
		        ads:adSize="BANNER"
		        ads:loadAdOnCreate="true"
		        android:layout_alignParentTop="true"/>	  
	         
	         
	     <ZoomControls
   			android:id="@+id/zc_tool"
   			 android:layout_width="wrap_content" 
	   		 android:layout_height="wrap_content" 
	   		 android:layout_centerInParent="true"
			/>	
			
			
		 <SeekBar 
			android:id="@+id/pageSeekBar" 
			android:layout_width="fill_parent" 
			android:layout_height="50dip" 
			android:thumb="@drawable/checked" 
			android:progressDrawable="@drawable/pagebar_port" 
			android:layout_alignParentBottom="true"
			android:padding="10dip"
			/>
		</RelativeLayout>
</RelativeLayout>