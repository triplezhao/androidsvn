<?xml version="1.0" encoding="utf-8"?>

 <FrameLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ns="http://mobwin.android.com/apk/res/com.fgh.voice"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bd"
  >
  
 
    
	<LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent">
 
 
 
  <com.tencent.mobwin.AdView
        xmlns:mobwin="http://mobwin.android.com/apk/res/com.fgh.voice"
        android:id="@+id/adview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        mobwin:textColor="#ffff3333"
        mobwin:titleColor="#ff00aa00"
        ns:backAlpha="180" >
    </com.tencent.mobwin.AdView>
    
    
		  <pigframe.views.widet.PullToRefreshListView 
		  		  android:id="@+id/lv_weibolist"
				  android:layout_width="fill_parent"
				  android:layout_height="fill_parent"
				  android:dividerHeight="0dip"
				  android:divider="@color/transparent"
	 		   android:cacheColorHint="@color/transparent" 
	 		   android:fastScrollEnabled="true" 
	 		   android:fadingEdge="none" 
	 		   android:scrollbars="none"
			  />
		  
	  </LinearLayout>

  </FrameLayout>